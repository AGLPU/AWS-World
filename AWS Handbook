-- Install apache Usedata in Ec2 linux:
#!/bin/bash
sudo yum update -y
sudo yum install httpd -y 
sudo systemctl start httpd
sudo systemctl enable httpd
echo "Hello World from $(hostname -f)" > /var/www/html/index.html

-- Install apache Usedata in Ec2 Ubuntu:
#!/bin/bash
# Update package list
apt-get update -y

# Install Apache2
apt-get install apache2 -y

# Enable Apache to start on boot and start it now
systemctl enable apache2
systemctl start apache2

# Optional: Add a basic HTML page
echo "<h1>Apache Web Server is running on Ubuntu EC2!</h1>" > /var/www/html/index.html

# Trasfer file from HOST to AWS
scp -i keyPair.pem /c/Learning/Projects/LoginApp2/target/LoginApp2-0.0.1-SNAPSHOT.jar ubuntu@13.203.159.208:/home/ubuntu/
LoginApp2-0.0.1-SNAPSHOT.jar    
